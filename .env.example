# Database Configuration
DB_TYPE=sqlite
DB_PATH=prompts.db

# For PostgreSQL (uncomment and configure if using PostgreSQL)
# DB_TYPE=postgres
# POSTGRES_DSN=postgresql://username:password@localhost:5432/ai_prompt_manager

# Authentication Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
LOCAL_DEV_MODE=true

# SSO/ADFS Configuration (optional)
SSO_ENABLED=false
ADFS_ENABLED=false
SSO_CLIENT_ID=your-sso-client-id
SSO_CLIENT_SECRET=your-sso-client-secret
SSO_AUTHORITY=https://login.microsoftonline.com/your-tenant-id
SSO_REDIRECT_URI=http://localhost:7860/auth/callback

# Application Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=7860